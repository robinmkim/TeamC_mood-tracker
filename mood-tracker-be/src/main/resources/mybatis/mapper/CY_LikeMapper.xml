<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teamc.moodtracker.dao.CY_BoardDao">
    <!-- 좋아요 여부 확인 : 1이면 이미 좋아요를 누름, 0이면 안 함-->
    <select id="likeCheck" resultType="int">
        select count(*) as cntLike from board_like
        where blike_user=#{mid} and blike_bid=#{bid}
    </select>
    <!--좋아요 개수 -->
    <select id="cntLike" resultType="int">
        select count(*) as cntLike from board_like
        where blike_bid=#{bid}
    </select>
    <!-- 좋아요 / 좋아요 취소-->
    <insert id="addLike" parameterType="clvo">
        insert into board_like values(b_like_seq.nextval, #{mid}, #{bid})
    </insert>
    <delete id="deleteLike">
        delete from board_like where blike_user=#{mid} and blike_bid=#{bid};
    </delete>


</mapper>